<%= simple_form_for @version, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.association :locale %>
  	<% @version.attributes.each do |name, value| %>
  		<% next if name == 'id' or name == 'updated_at' or name == 'created_at' or name == 'locale_id' %>
  		<%= f.input name, as: :string %>
  	<% end %>
  	<div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                versions_path, :class => 'btn' %>
  </div>
<% end %>
