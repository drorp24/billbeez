<%= simple_form_for @version, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.association :locale %>
  	<% @version.attributes.each do |name, value| %>
  		<% next if name == 'updated_at' or name == 'created_at' or name == 'locale_id' %>
  		<%= f.input name, as: :string %>
  	<% end %>
  	<div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                versions_path, :class => 'btn' %>
  </div>
<% end %>
<script>
$(document).ready(function () {
	
	function align(el) {
		if (el.val() == '1') {
			$('html').attr('dir', 'rtl')
			$('.form-horizontal .control-label').css('float', 'right')
		} else {		
			$('html').attr('dir', 'ltr')
			$('.form-horizontal .control-label').css('float', 'left')
		}
		
	}

	align($('#version_locale_id'));
	
	$('#version_locale_id').change(function() {
		align($(this))
	})
	
})

</script>
