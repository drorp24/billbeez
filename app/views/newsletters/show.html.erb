<%- model_class = Newsletter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @newsletter.customer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:version_id) %>:</strong></dt>
  <dd><%= @newsletter.version_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sent_at) %>:</strong></dt>
  <dd><%= @newsletter.sent_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:finding_1) %>:</strong></dt>
  <dd><%= @newsletter.finding_1 %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              newsletters_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_newsletter_path(@newsletter), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              newsletter_path(@newsletter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
