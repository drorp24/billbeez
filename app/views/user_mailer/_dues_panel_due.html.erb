  <tr id="bill_background" class="bill_background">
    <td bgcolor="#000000">
    	<% if due.supplier %>
	    	<% if logo = due.supplier.logo %>
	    		<%= image_tag logo, class: 'sup_logo' %>
	    	<% else %>	
	    		<%= due.supplier.name %>
			<% end %>
		<% end %>
	</td>
    <td><%= l due.bill.issue_date, format: :no_year if due.bill.issue_date %></td>
    <td class="amount"><%= number_to_currency due.bill.amount %></td>
    <td>
		<% if due.bill.due_date %>
			<% days = (due.bill.due_date.to_date - Date.today.to_date).to_i %>
	    	<%= days == 1 ? t("datetime.distance_in_words.x_days.one") : t("datetime.distance_in_words.x_days", count: days) %>
    	<% end %>
	</td> 
	<td>
		<% if due.payment_url.present? %>
			<%= link_to "שלם", due.payment_url, class: "activities" %>
		<% end %>
		<% if due.paid_url.present? %>
			<%= link_to "סמן כמשולם", due.paid_url, class: "activities" %>
		<% end %>
	</td>
	  <% if @control %>	
	  	<td>
		  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		              customer_newsletter_bill_path(@customer, @newsletter, due.bill, section: params[:section]),
		              :method => :delete,
		              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		              :class => 'btn btn-mini btn-danger' %>
	  	</td>
	  	<td>
	  		<%= link_to "Edit", edit_customer_newsletter_bill_path(@customer, @newsletter, due.bill, section: params[:section]), class: 'btn btn-mini' %>
  		</td>
  		<td class="leftmost">
  			<%= link_to "Add Line", new_customer_newsletter_due_line_path(@customer, @newsletter, due, section: params[:section]), class: 'btn btn-mini' %>
		</td>
	  <% end %>
  </tr>
  <% due.lines.each do |line| %>
  	<tr>
	  	<td><%= line.part1 %></td>
	  	<td><%= line.part2 %></td>
	  	<td><%= line.part3 %></td>
	  	<td><%= line.part4 %></td>
	  	<td><%= line.part5 %></td>
	  	<% if @control %>
	  		<td>
			  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	          customer_newsletter_due_line_path(@customer, @newsletter, due, line,section: params[:section]),
	          :method => :delete,
	          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	          :class => 'btn btn-mini btn-danger' %>
	  		</td>
	  		<td>
	  			<%= link_to "Edit", edit_customer_newsletter_due_line_path(@customer, @newsletter, due, line, section: params[:section]), class: 'btn btn-mini' %>	  			
	  		</td>
		<% end %>
  	</tr>
  <% end %>
