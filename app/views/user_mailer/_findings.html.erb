<table id="findings" class="jumbo" style="background-color: #f9f9f9 !important;" bgcolor="#f9f9f9">
	<tr>
		<td>
			<a name="findings">
				<h1 id="findings_title1" style="color: #000000 !important; line-height: 120px !important;">
				<% if @edit %>
					<%= link_to @version.header_title, "#", data: {:'editable-field' => 'true', pk: "1", type: "text", name: "header_title", url: modify_version_path(@version.id), title: "Update"} %>
				<% else %>
					<%= @version.header_title %>
				<% end %>
				</h1>
			</a>			
		</td>
	</tr>
	<tr>
		<td>
			<p class="margin">
				<% if @edit %>
					<%= link_to @version.findings_sentence, "#", data: {:'editable-field' => 'true', pk: "1", mode: "inline", type: "textarea", name: "findings_sentence", url: modify_version_path(@version.id), title: "Update"} %>
				<% else %>
					<%= @version.findings_sentence %>
				<% end %>
			</p>	
		</td>
	</tr>
	<tr><td>&nbsp;</td></tr>
	<tr><td>&nbsp;</td></tr>
	<tr>
		<td>
			<table class="findings jumbo" style="background-color: #f9f9f9 !important;" bgcolor="#f9f9f9">
				<tbody class="jumbo">
					<% @newsletter.plans.order(created_at: :asc).each do |plan| %>
						<tr class="margin" bgcolor="#f9f9f9" style="background-color: #f9f9f9 !important;">
							<td style="text-align: right">
								<span class="margin"><%= plan.findings %></span> 
							</td>
							<td class="margin" style="text-align: left">
								<span class="margin"><%= link_to "לפרטים נוספים", "#plans", class: "highlights_link", style: "color: #0000ff;" %></span>
							</td>						
						</tr>
					<% end %>
				</tbody>
			</table>		
		</td>
	</tr>
</table>