<div id="offers_panel" class="panel panel-default">
  <!-- Default panel contents -->
 	<table class="section_title">
			<tr class="section_title panel-heading panel-primary dues-panel" style="padding: 10px 15px !important; background-color: #D2DE7D !important; background-image: linear-gradient(to bottom, #F4F7DF 0%, #D2DE7D 100%) !important;" bgcolor="#D2DE7D">
				<th width="<%= @control ? "375" : "300"%>" class="td_right" style="text-align: right">
					<%= image_tag "medal-128.png", class: "section_title_logo section_title_element", size: "48x48"%>
				</th>
				<th width="<%= @control ? "375" : "300"%>">
  					<a data-anchor="offers" name="offers" class="section_title_name", style="text-decoration: none;text-shadow: 0 1px 0 #ffffff !important;">
						<% if @edit %>
							<%= link_to @version.offers_title, "#", class: "section_title_name", data: {:'editable-field' => 'true', pk: "1", type: "text", name: "offers_title", url: modify_version_path(@version.id), title: "Update"} %>
						<% else %>
  							<span class="section_title_name"><%= @version.offers_title %></span>
 						<% end %>
 					</a>
			  	</th>
			  	<th width="<%= @control ? "375" : "300"%>" class="td_left" style="text-align: left">
			  		<% if @control %>
			  			<span class="section_title_element"><%= link_to 'Add offer', new_customer_newsletter_offer_path(@customer, @newsletter), class: 'btn btn-mini' %></span>
					<% else %>
			  			<span class="section_title_element"><%= link_to "חזור", "#findings", class: 'back_link' %></span>
					<% end %>
		  		</th>
	  		</tr>			  		
	</table>
  <div class="panel-body">
    <p>
		<% if @edit %>
			<%= link_to @newsletter.offers_sentence, "#", data: {:'editable-field' => 'true', pk: "1", type: "text", name: "offers_sentence", url: modify_version_path(@version.id), title: "Update"} %>
		<% else %>
			<%= @newsletter.offers_sentence %>
		<% end %>    	
	</p>
  </div>

  <!-- Table -->
<% @newsletter.offers.includes(:curr_plan, :recc_plan, :othr_plan).order(created_at: :asc).each do |offer| %>
  <table class=" data table" cellspacing="0">	
        <thead>
          <tr>
            <td>תכנית</td>
            <td class="border" style="border-left: 2px solid #dddddd !important;">נוכחית</td>
            <td>תכנית</td>
            <td class="border" style="border-left: 2px solid #dddddd !important;">מומלצת</td>
            <% if offer.othr_plan_id %>
            <td>תכנית</td>
            <td class="border" style="border-left: 2px solid #dddddd !important;">נוספת</td>
            <% end %>
            <% if @control %>
            	<td></td>
            	<td></td>
            	<td></td>
        	<% end %>
          </tr>
        </thead>
        <tbody>
			<%= render 'offers_panel_offer', offer: offer %>
        </tbody>
  </table>
<% end %>
</div>