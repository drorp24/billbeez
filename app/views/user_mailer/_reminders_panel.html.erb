<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading panel-primary clearfix">
  	<a data-anchor="reminders" name="reminders" style="text-decoration: none; color: inherit;">
  		<span class="pull-right">תזכורות</span>
  	</a>
  		<% if @control %>
			<span class="pull-left"><%= link_to 'Add Reminder', new_customer_newsletter_reminder_path(@customer, @newsletter), class: 'btn btn-mini' %></span>
		<% else %>
  			<span class="pull-left"><%= link_to "חזור", "#highlights_reminders", class: 'back_link' %></span>
		<% end %>
  </div>
  <div class="panel-body">
    <p>רצינו להזכיר לך...</p>
  </div>

  <!-- Table -->
  <table class="data table">	
        <thead>
          <tr>
            <th></th>
            <% if @control %>
            	<th></th>
            	<th></th>
        	<% end %>
          </tr>
        </thead>
        <tbody>
        	<% @newsletter.reminders.order(created_at: :desc).each do |reminder| %>
				<%= render 'reminders_panel_reminder', reminder: reminder %>
			<% end %>
        </tbody>
  </table>
</div>