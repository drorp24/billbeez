<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading panel-primary clearfix">
 	<table class="section_title">		<tbody>
			<tr style="background-color: #bdcd3f !important; padding: 10px 15px !important; background-color: #bdcd3f !important; background-image: linear-gradient(to bottom, #F4F7DF 0%, #D2DE7D 100%) !important;" bgcolor="#bdcd3f">
				<th width="190" class="td_right" style="text-align: right">
					<%= image_tag "calendar-128.png", class: "section_title_logo", size: "48x48" %>
				</th>
				<th width="190">
  					<a data-anchor="reminders" name="reminders" class="section_title_name", style="text-decoration: none;">
  						תזכורות	
  					</a>
			  	</th>
			  	<th width="190" class="td_left" style="text-align: left">
			  		<% if @control %>
						<span class="pull-left"><%= link_to 'Add Reminder', new_customer_newsletter_reminder_path(@customer, @newsletter), class: 'btn btn-mini' %></span>
					<% else %>
			  			<span class="pull-left"><%= link_to "חזור", "#highlights_reminders", class: 'back_link' %></span>
					<% end %>
		  		</th>
	  		</tr>			  				</tbody>
	</table>
  </div>
  <div class="panel-body">
    <p>רצינו להזכיר לך...</p>
  </div>

  <!-- Table -->
  <table class="data table"  cellspacing="0">	
        <thead>
          <tr>
            <th></th>
            <% if @control %>
            	<th></th>
            	<th></th>
        	<% end %>
          </tr>
        </thead>
        <tbody>
        	<% @newsletter.reminders.order(created_at: :asc).each do |reminder| %>
				<%= render 'reminders_panel_reminder', reminder: reminder %>
			<% end %>
        </tbody>
  </table>
</div>